<tiles-definitions>
	<definition name="base" template="/WEB-INF/template/layout.jsp">
		<put-attribute name="title" value="eStore homepage:)" />
		<put-attribute name="menu" value="/WEB-INF/template/menu.jsp" />
		<!-- body는 상속으로 -->
